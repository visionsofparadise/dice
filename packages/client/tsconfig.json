{
	"extends": "@dice/tsconfig/esm.json",
	"compilerOptions": {
		"importHelpers": true,
		"outDir": "dist",
		"paths": {
			"*": ["./node_modules/*", "./src/types/*"]
		}
	},
	"include": ["src/**/*.ts", "src/**/*.tsx"],
	"exclude": ["dist/", "node_modules"],
	"types": ["jest"],
	"typeRoots": ["./src/type", "node_modules/@types"]
}
