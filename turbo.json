{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "//#package-check": {
      "inputs": ["**/package.json"]
    },
    "check": {
      "dependsOn": ["//#package-check", "^check"],
      "inputs": ["src/**", "./tsconfig.json"],
      "outputs": []
    },
    "build": {
      "env": ["REACT_APP_STAGE"],
      "dependsOn": ["^build", "check"],
      "inputs": ["src/**", "./tsconfig.json", "./package.json"],
      "outputs": ["dist/**"]
    },
    "build-local": {
      "env": ["REACT_APP_STAGE"],
      "dependsOn": ["^build", "check"],
      "inputs": ["src/**", "./tsconfig.json", "./package.json"],
      "outputs": ["dist/**"]
    },
    "build-docker": {
      "dependsOn": ["build"],
      "inputs": ["dist/**"],
      "outputs": []
    },
    "unit": {
      "dependsOn": ["check"]
    },
    "integration": {
      "dependsOn": ["build"]
    },
    "start": {
      "dependsOn": ["build"]
    },
    "start-docker": {
      "dependsOn": ["build-docker"]
    },
    "publish": {
      "dependsOn": ["unit", "build"]
    },
    "publish-docker": {
      "dependsOn": ["unit", "build-docker"]
    }
  }
}
